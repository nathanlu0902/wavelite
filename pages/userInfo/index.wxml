<view class="wrapper">
  <view class="avatar">
    <button
      class="avatar-wrapper"
      open-type="chooseAvatar"
      bind:chooseavatar="onChooseAvatar"
    >
      <image class="avatar" src="{{avatarUrl}}" />
    </button>
  </view>
  <form bindsubmit="submitForm">
    <mp-cells>
      <mp-cell
        class="item"
        prop="nickname"
        title="昵称:"
        inline="true"
      >
        <input
          type="nickname"
          name="nickname"
          maxlength="32"
          data-field="nickname"
          value="{{nickname}}"
          class="weui-input"
          placeholder="请输入昵称"
        />
      </mp-cell>

      <mp-cell
        class="item"
        prop="phone"
        title="手机号:"
        inline="true"
      >
        <input
          type="number"
          name="phone"
          maxlength="11"
          auto-focus
          value="{{phone}}"
          placeholder="请输入手机号"
        />
      </mp-cell>

      <mp-cell
        class="item"
        prop="gender"
        title="性别:"
        inline="true"
      >
        <radio-group bindchange="onGenderChange" name="gender">
          <label>男</label>
          <radio value="male" checked="{{gender=='male'?true:false}}" />
          <label>女</label>
          <radio value="female" checked="{{gender=='female'?true:false}}" />
        </radio-group>
      </mp-cell>

      <mp-cell
        class="item"
        prop="birth"
        title="生日:"
        inline="true"
      >
        <picker
          name="birth"
          mode="date"
          value="{{date}}"
          start="1910-01-01"
          end="{{pickerEndDate}}"
          bindchange="onDateChange"
        >
          <view class="picker">
            生日: {{typeof(date)=="string"?date:"请选择"}}
          </view>
        </picker>
      </mp-cell>
    </mp-cells>
    <button type="primary" formType="submit">保存</button>
    <button type="primary" bindtap="resetForm">重置</button>
  </form>

</view>

