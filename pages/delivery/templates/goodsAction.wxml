<template name="goods-actions">
  <view class="goods-actions">
    <block wx:if="{{qty>0}}">
      <view class="goodsBtn" bindtap="minus" data-id="{{id}}" data-qty="{{qty}}">-</view>
      <input type="number" class="action-qty" value="{{qty}}" bindinput="input" data-id="{{id}}"/>
    </block>
    <view class="goodsBtn" bindtap="add"  data-id="{{id}}">+</view>
  </view>
</template>