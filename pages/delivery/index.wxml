<view class="wrapper">
<van-search 
class="search-bar"
value="{{value}}"
placeholder="搜索菜品"
bind:search="onSearch"
bind:change="onChange"
></van-search>
<view class="menu-wrapper">
<scroll-view class="left-menu" scroll-y="true" style="height:{{height}}">
  <view 
    class="left-item" 
    wx:for="{{typeList}}" 
    wx:key="*this"
    bindtap="bindLeftItemTap"
    data-currenttype="{{item}}"
    data-index="{{index}}"
    >
    <text class="itemText {{currentIndexL==index?'active-text':''}}">{{item}}</text>
  </view>
</scroll-view>
<scroll-view class="right-menu" scroll-y="true" style="height:{{height}}">
  <view 
    class="right-item"
    wx:for="{{goodsList}}"
    wx:key="id"
  >
  <block wx:if="{{item.type==currentType}}">
    <image class="img" mode="aspectFit" src="{{item.picURL}}"></image>
    <view class="info-wrapper">
      <text class="dishName">{{item.dish}}</text>
      <text class="dishRemark">{{item.dishRemark}}</text>
      <view class="dishPrice">{{item.dishPrice}}</view>
      <view class="btnGroup">
      <view class="goodsBtn" bindtap="minus" data-id="{{item.id}}" data-qty="{{item.qty}}" wx:if="{{item.qty>0}}">-</view>
      <text class="qty" wx:if="{{item.qty>0}}">{{item.qty}}</text> 
      <view class="goodsBtn add" bindtap="add"  data-id="{{item.id}}">+</view>
      </view>
    </view>
  </block> 
  </view>

</scroll-view>
</view>
<checkout-bar class="checkout-bar" totalPrice="{{totalPrice}}"/>
</view>