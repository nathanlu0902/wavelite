<view>
  <view class="delivery-info-wrapper">
  <!--如果地址存在，显示用户名和手机号-->
    <view wx:if="{{address}}">
      <view class="address-info-wrapper">
        <view>{{address.detail}}</view>
        <view>{{address.name}}</view>
        <view>{{address.phone}}</view>
      </view>
    </view>
    <view wx:else>
      <view class="choose-address-content">
        <view class="choose-address-btn" bindtap="chooseAddress">请选择收货地址</view>
      </view>
    </view>
    <view class="delivery-info eta">
      <text>预计送达时间</text>
      <view>{{eta}}</view>
    </view>
    <view class="delivery-info payment-method">
      <text>支付方式</text>
      <view>微信支付</view>
    </view>
  </view>

  <view class="cart-content">
    <view wx:for="{{cart}}" wx:key="id" class="cart-item">
      <image src="{{item.goodsPic}}"></image>
      <view class="cart-item">
        <view class="text-large">{{item.goodsName}}</view>
        <view class="grey-color text-small">✖️{{item.qty}}</view>
        <view class="text-bold" >{{item.goodsPrice}}</view>
      </view>
    </view>
  </view>

  <view class="footer">
    <view class="totalPrice">总计:¥{{totalPrice}}</view>
    <view class="pay-btn" bindtap="handlePayment">去支付</view>
  </view>

</view>