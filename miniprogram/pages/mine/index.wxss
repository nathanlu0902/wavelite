.background-pic{
	height:700rpx;
	width:100%;
}

.small-link{
  font-size: 20rpx;
  color:grey;  
  position:absolute;
  bottom:0;
  right:0;
}

.userinfo-wrapper{
  height:200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding:0 40rpx;
  margin-top:-140rpx;
}


.info-wrapper{
  position:absolute;
  padding:0 30rpx;

}
.avatar{
	flex:1;
	border-radius: 50%;
	width:144rpx;
	height:144rpx;
}

.nickname{
	flex:3;
	font-size: 40rpx;
	font-weight: 500;
	line-height: 140rpx;
	margin-left:40rpx;
}

.edit-btn{
	flex:1
}
.star-wrapper{
  margin-top:30rpx;
  height:200rpx;
  display:relative;
}

.star-wrapper .star-info{
  display: flex;
  justify-content: space-between;
}

.starStatus-bar{
	margin-top:-40rpx;
}

.benefit-wrapper{
  margin-top:30rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  height:180rpx;
}

.benefit-item{
  border:2rpx solid;
  width:50%;
  height:100%;
  position:relative;
}

.benefit-item .benefit-info{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%)
}



