@import "../../styles/iconfont.wxss";

.search-wrapper{
  position:relative;
  height:100rpx;
  width:100%;
  top:60rpx;
}

.search-icon{
  width:40rpx;
  height:40rpx;
  z-index:999;
  position:absolute;
  left:70rpx;
  top:10rpx;
}

.search-input{
  position:absolute;
  left:48rpx;
  top:0;
  width:520rpx;
  height:60rpx;
  border-radius: 40rpx;
  border:1px solid #DEDEDE;
  padding-left:60rpx;
  z-index:999;
}

.cancel-btn{
  position: absolute;
  right:20rpx;
}

.section-wrapper{
  margin:124rpx auto auto 48rpx;

  
}

.section-wrapper .section{
  margin-top: 120rpx;
}

.section-wrapper .history{
  position:relative;
}

.header{
  font-size:32rpx;
  font-weight: 400;
}

.clean-btn{
  position: absolute;
  inset: 0px 20rpx auto 560rpx;

}


.wrapper{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top:16rpx;
}

.item{
  border:1px solid #D9D9D9;
  border-radius: 40rpx;
  width:fit-content;
  padding:0 15rpx;
  margin:20rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 300;
}
.result-list{
  display: flex;
  flex-direction: column;
}

