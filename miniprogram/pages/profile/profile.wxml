<button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar" >
	<image class="avatar" src="{{avatarUrl}}"></image>
</button>

<van-cell-group cen inset>
	<van-cell required class="profile-cell"   center title="昵称">
		<van-field  clearable border="false" value="{{nickname}}" bindchange="onNicknameChange" placeholder="请输入用户名"></van-field>
	</van-cell>
	<van-cell required class="profile-cell"  center title="手机号">
		<van-field type="number" clearable value="{{phone}}" border="false" bindchange="onPhoneChnage" placeholder="请输入用户名"></van-field>
	</van-cell>
	<van-cell  class="profile-cell"  center title="性别">
		<van-radio-group direction="horizontal" value="{{gender}}" bindchange="onGenderChange">
			<van-radio name="男">男</van-radio>
			<van-radio name="女">女</van-radio>
		</van-radio-group>
	</van-cell>
	<van-cell class="profile-cell" center title="生日" bind:tap="show_popup" value="{{birthday}}"/>
	<van-popup show="{{popup_show}}" bind:close="onClose" position="bottom">
		<van-datetime-picker type="date" max-date="{{maxDate}}" min-date="{{minDate}}" bind:confirm="onBirthdayConfirm" bind:cancel="onBirthdayCancel" />
	</van-popup>

</van-cell-group>
<van-button class="submit-btn" type="primary" bind:tap="submit">保存</van-button>