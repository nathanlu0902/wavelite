@import "../../styles/iconfont.wxss";
.title{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.wrapper{
  position: relative;
  padding:32rpx;
  border-bottom: 1px dashed #E9ECF1;
}

.enable-gps-btn{
  position: absolute;
  right:32rpx;
  top:64rpx;
  font-size: 24rpx;
  color: #00BEBE;
}

.address-list{

}

.address-item{
  position:relative;
  border-bottom: 1rpx solid lightgray;
  background-color: #F6F6F6;
  margin-bottom:32rpx;
  width:100%;
  height:142rpx;

}
.default-icon{
  position:absolute;
  top:0;
  right:0;
  width:64rpx;
  height:30rpx;
  background-color: #DCDEE4;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}

.radio{
  position:absolute;
  top:54rpx;
  left:32rpx;
  transform:scale(0.7); /*修改radio大小 */
}

.address-item .address-info-wrapper{
  width: 506rpx;
  height:78rpx;
  position: absolute;
  /* inset:16px auto 16px 43px; */
  left:100rpx;
  top:32rpx;
}
.address-item .address-info-wrapper .address-title{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
}

.address-item .address-info-wrapper .out-of-range{
  border: 2rpx solid black;
  width:128rpx;
  height:30rpx;
  font-size: 18rpx;
  text-align: center;
  line-height: 30rpx;
  position:absolute;
  top:8rpx;
  right:24rpx;
}

.address-phone{
  position: absolute;
  bottom:0px;
  top: 50rpx;
  left:120rpx;
}

.address-username {
  position: absolute;
  bottom:0px;
  top: 50rpx;
}

.address-item .edit-btn-wrapper{
  position: absolute;
  font-size: 40rpx;
  inset:56rpx 32rpx 56rpx auto;
  width:32rpx;
  height:32rpx;
  text-align: center;
  line-height: 32rpx;

}

.address-item .edit-btn-wrapper .edit-btn{
  position: absolute;
  right:0px;
  width:32rpx;
  height:32rpx;
}


.no-address-remind{
  width:100%;
  margin:100rpx auto;
  text-align: center;
}