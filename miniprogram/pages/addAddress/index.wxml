<form catchsubmit="formSubmit">
<view class="new-address-form">
  <view class="item-wrapper">
    <text class="label">联系人</text>
    <input class="input-item" name="receiver" placeholder="请填写联系人姓名" value="{{address[index].receiver||''}}"></input>
  </view>
  <view class="item-wrapper">
    <text class="label">称呼</text>
    <radio-group class="gender-group" name="gender">
      <radio value="male" checked="{{address[index].gender==='male'}}">先生</radio>
      <radio value="female" checked="{{address[index].gender==='female'}}">女士</radio>
    </radio-group>
  </view>
  <view class="item-wrapper" >
    <text class="label">手机号</text>
    <input class="input-item" name="phone" type="digit" placeholder="请填写收货人手机号" value="{{address[index].phone||''}}"></input>
  </view>
  <view class="item-wrapper">
    <text class="label">收货地址</text>
    <view name="location" class="location-btn" bindtap="chooseLocation">{{address[0].location||location||"请选择收货地址"}}</view>
  </view>
  <view class="item-wrapper">
    <text class="label">门牌号</text>
    <input class="input-item" name="detail_address" placeholder="填写门牌号（选填）" value="{{address[0].detail_address||''}}"></input>
  </view>
  <!-- <view class="item-wrapper">
    <text class="label">标签</text>
  </view> -->
  <view class="item-wrapper default-btn-wrapper">
    <text class="label">设为默认地址</text>
    <switch class="isDefault" name="isDefault" bindchange="defaultChange"/>
  </view>
</view>
<button class="main-black-button" form-type="submit">确定</button>
</form>


