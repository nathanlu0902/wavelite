<view class="get-wx-address">
  <view class="label">获取微信收货地址</view>
  <view class="get-wx-address-btn"></view>
</view>

<form catchsubmit="formSubmit">
<view class="new-address-form">
  <view class="receiver input-item">
    <text class="label">收货人</text>
    <input name="receiver" placeholder="请输入有效姓名"></input>
  </view>
  <view class="phone input-item" >
    <text class="label">手机号</text>
    <input name="phone" placeholder="请输入有效手机号码"></input>
  </view>
  <view class="address input-item">
    <text class="label">收货地址</text>
    <view name="location" class="location-btn" bindtap="chooseLocation">{{location||"点击选择收货地址"}}</view>
  </view>
  <view class="detail-address input-item">
    <text class="label">收详细地址</text>
    <input name="detail_address" placeholder="填写门牌号（选填）"></input>
  </view>
</view>
<view class="default-btn input-item">
  <text class="label">设为默认</text>
  <switch name="isDefault" bindchange="defaultChange"/>
</view>
<view class="btn-wrapper">
  <button type="primary" formType="submit" class="confirm-btn">确定</button>
</view> 
</form>