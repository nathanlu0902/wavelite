
.item-wrapper{
  height:57px;
  width:346px;
  margin:0px 14px;
  display:flex;
  flex-direction: row;
  border-bottom:1px solid #E9ECF1;
  line-height:56px;
  
}

.label{
  margin-left:13px;
  width:100px;
  font-size: 13px;
}

.location-btn{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 13px;
}

.input-item{
  margin-top:20px;
  font-size: 13px;
}

.gender-group{
  font-size: 13px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width:130px;
}

.btn-wrapper{
  display: flex;
  justify-content: center;
}

.default-btn-wrapper{
  position: absolute;
  bottom:75px;
}

.default-btn-wrapper .isDefault{
  transform: scale(0.8);
  position: absolute;
  right:10px;
}