swiper{
  height:322px;
  text-align: center;
}

swiper-item image{
  width:100%;
  height:100%;
}

.selected{
  background-color: #999DAE;
}

.good-info-wrapper{
  position:relative;
  margin:32px 24px;
  height:600px;
}
.good-info-wrapper .goodsName{
  position: relative;
  font-weight: 450;
}

.good-info-wrapper .label-wrapper{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin:15rpx auto 30rpx auto;
}

.label-item{
  margin-right:10px;
  padding:0 10rpx;
  border:1px solid #ccc;
  font-size: 12px;
  color: #686D82;
  width: fit-content;
  font-weight: 300;
}
.selection{
  color: #000000;
  font-size: 13px;
  font-weight: 400;
}
.good-info-wrapper .description{
  font-size:13px;
  margin:20px 0;
}

.info{
  margin-bottom: 10px;
}

.title{
  font-size: 12px;
  color:#999DAE;
}
.info .content{
  color:#686D82;
}

.qty{
  margin:0 15rpx;
  font-size:24rpx;
}

.add_btn {
  height:45rpx;
  width:45rpx;
}

.minus_btn{
  height:45rpx;
  width:45rpx;
}

.goods-btn_img{
  height:100%;
  width:100%;
}
.checkout-wrapper{
  position:fixed;
  left:0;
  bottom:0;
  border: 1px solid rgb(228, 227, 227);
  width:100%;
  height:108px;
  box-shadow: 0 0 3px 3px rgb(228, 227, 227);
  background-color: #fff;
  z-index: 999;
}
.checkout-wrapper .add-cart-btn{
  background-color: black;
  width:327px;
  height:35px;
  text-align: center;
  margin: 0 auto;
  color:#fff;
  line-height:35px;
  font-size:14px;
}

.checkout-wrapper .checkout-info-wrapper{
  height:15px;
  margin:10px 20px;
  font-size: 13px;
  color:grey;
  position:relative;
}
.checkout-wrapper .checkout-info-wrapper .calories-info{
  position:absolute;
  left:0;
}
.checkout-wrapper .checkout-info-wrapper .qty-control{
  position:absolute;
  right:0;
  display: flex;
  flex-direction: row;

}

