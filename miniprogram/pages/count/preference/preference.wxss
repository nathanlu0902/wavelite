.period-switch{
	display: flex;
	flex-direction: row;
	justify-content: center;
	position: absolute;
	top:50rpx;
	width:200rpx;
	right:50%;
	margin-right:-100rpx;
}

.switch-btn{
	width:fit-content;
	border: 1px solid;
	text-align: center;
	border-radius: 10rpx;
}

.selected{
	background-color:lightgray;
}