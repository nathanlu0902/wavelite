<van-radio-group value="{{set}}" bind:change="onSetChange">
	<swiper circular bindchange="handleChange" class="set-wrapper" indicator-dots previous-margin="80rpx" next-margin="80rpx">
		<swiper-item class="set">
			<image class="itemImg {{currentIndex==0?'active':''}}" style="background-color: grey;"></image>
			<!-- <van-radio name="low" class="radio"></van-radio>青铜 -->
		</swiper-item>
		<swiper-item class="set">
			<image class="itemImg {{currentIndex==1?'active':''}}" style="background-color: darkgrey;"></image>
			<!-- <van-radio name="medium" class="radio"></van-radio>白银 -->
		</swiper-item>
		<swiper-item class="set">
			<image class="itemImg {{currentIndex==2?'active':''}}" style="background-color: black;"></image>
			<!-- <van-radio name="best" class="radio"></van-radio>黄金 -->
		</swiper-item>
	</swiper>
</van-radio-group>

<van-cell-group inset class="info-wrapper">
	<van-cell required title="次数" bind:click="showNumPopup" value="{{num?num:'请选择次数'}}" error-message="{{numError}}">
	</van-cell>
</van-cell-group>


<block wx:if="{{set&&num}}">
	<view style="position:relative;height:600rpx">
		<van-cell-group inset>
			<van-field required label="收件人姓名" placeholder="请填写默认的收件人姓名" maxlength="30" bindblur="onReceiverInput" error-message="{{receiverError}}"></van-field>
			<van-field required type="number" label="手机号" placeholder="请填写默认的收件人手机号" maxlength="11" bindblur="onPhoneInput" error-message="{{phoneError}}"></van-field>
			<van-cell required title="配送地址" value="{{address_name?address_name:'请选择地址'}}" bind:tap="chooseAddress" error-message="{{addressError}}" value-class="address"></van-cell>
		</van-cell-group>
		<van-button bindtap="save" type="primary" round style="position:absolute;right:60rpx;bottom:130rpx">下一步</van-button>
	</view>
	<!-- <van-popup show="{{showTimePickerPopup}}" position="bottom" bind:close="onTimePickerPopupClose">
		<van-datetime-picker type="time" min-hour="{{minhour}}" max-hour="{{maxhour}}" show-toolbar bind:confirm="onTimePickerConfirm" bind:cancel="onTimePickerCancel"></van-datetime-picker>
	</van-popup> -->

</block>

<van-popup show="{{show}}" position="bottom" bind:close="onPopupClose">
	<van-picker show-toolbar columns="{{count_list}}" bind:confirm="onNumPickerConfirm" bind:cancel="onNumPickerCancel"></van-picker>
</van-popup>