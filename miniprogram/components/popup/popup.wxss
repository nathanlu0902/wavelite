.back-screen{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  background: #000000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 99;
}

.popup{
  position:fixed;
  width:100%;
  overflow:hidden;
  z-index: 9999;
  background: #fff;
  padding-top:20rpx;
  bottom:0;
  left:0;
  border-radius: 30rpx;
}
