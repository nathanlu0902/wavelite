@import "../styles/iconfont.wxss";
.tabbar-wrapper{
  display:flex;
  flex-direction:row;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  box-shadow: 0 0 14px rgba(0,0,0,.2);
  border-radius: 30px;
  height:100rpx;
  width:600rpx;
  margin:0 auto;
  bottom:0rpx;
  position:fixed;
  right:0;
  left:0
}

.tabbar-item-wrapper{
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  text-align: center;
  align-items: center;
}

.icon{
  width:1.2em;
  height:1.2em;
}

.text{
  font-size: 22rpx;
}